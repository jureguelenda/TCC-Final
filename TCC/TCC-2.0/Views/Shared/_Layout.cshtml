<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JDBebidas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/BemVindo.css" rel="stylesheet" />
    <link href="~/css/telaL.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/TCC_2._0.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <a href="#"><img class="logo" src="~/img/JD-Bebidas-Logo.jpg" alt="logo"></a>
            <div class="mobile-menu">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
            <ul class="nav-list">
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Produto" asp-action="Index">Produto</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Entrada" asp-action="Index">Entrada</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Saida" asp-action="Index">Saida</a>
                </li>

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Tipo" asp-action="Index">Tipo</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ProTipo" asp-action="Index">Pro Tipo</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ITENSENTRADA" asp-action="Index">Itens Entrada</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ProTipo" asp-action="Alerta">Estoque</a>
                </li>
                <li>
                    <partial class="nav-link" name="_LoginPartial" />
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2022 - TCC_2._0 - <a  asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


